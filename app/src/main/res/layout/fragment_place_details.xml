<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.place.PlaceDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/placeDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textAllCaps="true"
            android:drawableLeft="@drawable/ic_destination"
            android:text="Address"
            android:shadowColor="#666060"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:drawablePadding="10dip"
            android:singleLine="true"
            android:gravity="fill"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/placeAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textAllCaps="true"
                android:drawableLeft="@drawable/ic_rating"
                android:text="Rating"
                android:shadowColor="#666060"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:drawablePadding="10dip"
                android:singleLine="true"
                android:gravity="fill"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/placeRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textAllCaps="true"
                android:drawableLeft="@drawable/ic_website"
                android:text="Website"
                android:shadowColor="#666060"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:drawablePadding="10dip"
                android:singleLine="true"
                android:gravity="fill"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/placeWebsiteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textAllCaps="true"
                android:drawableLeft="@drawable/ic_phone"
                android:text="Phone"
                android:shadowColor="#666060"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:drawablePadding="10dip"
                android:singleLine="true"
                android:gravity="fill"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/placePhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="@dimen/activity_horizontal_margin" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>